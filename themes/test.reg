Windows Registry Editor Version 5.00

; =======================================
; Dark Crimson Theme for Windows
; This theme creates a rich, dark red UI environment
; with burgundy backgrounds and white text for contrast
; =======================================

; --- Control Panel Colors ---
[HKEY_CURRENT_USER\Control Panel\Colors]
"Window"="35 20 20"           ; Main window background color
"WindowText"="255 255 255"    ; Default text in windows
"ButtonFace"="60 15 15"       ; Button background color
"ButtonText"="255 255 255"    ; Text on buttons
"Hilight"="180 30 30"         ; Selected item highlight color
"HilightText"="255 255 255"   ; Text in selected items
"HotTrackingColor"="220 40 40" ; Hover highlight color
"Menu"="45 10 10"             ; Menu background color
"MenuText"="255 255 255"      ; Text in menus
"MenuHilight"="160 25 25"     ; Selected menu item
"Scrollbar"="120 20 20"       ; Scrollbar color
"ActiveTitle"="140 20 20"     ; Active window title bar
"GradientActiveTitle"="190 30 30" ; Active window title gradient
"InactiveTitle"="100 15 15"   ; Inactive window title
"TitleText"="255 255 255"     ; Text in title bar
"InfoWindow"="250 230 230"    ; Tooltip background
"InfoText"="130 20 20"        ; Tooltip text
"3DObjects"="60 15 15"        ; 3D UI elements
"Desktop"="40 10 10"          ; Desktop background
"GrayText"="180 180 180"      ; Disabled text
"Background"="40 10 10"       ; Windows background
"AppWorkspace"="50 12 12"     ; MDI application background
"ButtonShadow"="40 8 8"       ; Button shadow
"ButtonDkShadow"="30 5 5"     ; Dark button shadow
"ButtonHilight"="120 20 20"   ; Button highlight
"ButtonLight"="90 18 18"      ; Light button highlight

; --- Additional UI Elements for consistency ---
[HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\DWM]
"ColorPrevalence"=dword:00000001        ; Enable custom title bar colors
"AccentColor"=dword:00241496            ; Accent color (RGB: 150, 20, 36)
"ColorizationColor"=dword:c4241496      ; Window border color with alpha
"ColorizationAfterglow"=dword:c4241496  ; Visual effects glow color
"ColorizationColorBalance"=dword:00000064 ; Balance between accent and neutral color
"EnableWindowColorization"=dword:00000001 ; Enable window color features

; --- Accent colors for Start/Menu/Taskbar ---
[HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\Accent]
"AccentColorMenu"=dword:00241496        ; Start menu, taskbar color
"AccentPaletteKey"="Start/TaskbarAl"    ; Palette key for consistency
"StartColorMenu"=dword:00241496         ; Start menu color
"AccentColorInactive"=dword:00781414    ; Inactive accent elements

; --- Explorer Background Color (Desktop and File Explorer) ---
[HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\Accent]
"AccentColor"=dword:00241496            ; Explorer accent color

; --- Title bar Transparency Switching (optional) ---
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Themes\Personalize]
"SystemUsesLightTheme"=dword:00000000   ; Force dark theme for system UI
"AppsUseLightTheme"=dword:00000000      ; Force dark theme for applications
"EnableTransparency"=dword:00000001     ; Enable transparency effects

; --- Fix for Sidebar and Navigation elements ---
[HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\CurrentVersion\Themes\Personalize]
"ColorPrevalence"=dword:00000001        ; Apply accent color to sidebar elements

; --- Force app elements to use dark mode ---
[HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\Accent]
"AccentColorMenu"=dword:00241496        ; Consistent color in app UI elements
